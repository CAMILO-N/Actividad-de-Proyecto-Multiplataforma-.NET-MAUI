<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppEmpresarial.ProductosPage"
             Title="Productos">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Entry x:Name="NombreEntry"
               Placeholder="Nombre del producto" />

        <Entry x:Name="PrecioEntry"
               Placeholder="Precio"
               Keyboard="Numeric" />

        <Button Text="Agregar Producto"
                Clicked="AgregarProducto" />

        <CollectionView x:Name="ProductosList">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <SwipeView>
                        <SwipeView.RightItems>
                            <SwipeItems>
                                <SwipeItem Text="Eliminar"
                                           BackgroundColor="Red"
                                           Invoked="EliminarProducto" />
                            </SwipeItems>
                        </SwipeView.RightItems>

                        <!-- AQUI VA EL GRID CORRECTO -->
                        <Grid Padding="10" RowDefinitions="Auto, Auto">
                            <Label Grid.Row="0"
                                   Text="{Binding Nombre}"
                                   FontSize="18"/>

                            <Label Grid.Row="1"
                                   Text="{Binding Precio}"
                                   FontSize="14"
                                   TextColor="Gray"/>
                        </Grid>

                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
