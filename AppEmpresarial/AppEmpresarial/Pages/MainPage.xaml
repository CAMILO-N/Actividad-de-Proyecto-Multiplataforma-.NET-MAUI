<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppEmpresarial.MainPage"
             Title="Panel Principal">

    <VerticalStackLayout Padding="20" Spacing="18">

        <Label x:Name="SaludoLabel"
               FontSize="22"
               HorizontalOptions="Center" />

        <Button Text="Productos" Clicked="OpenProductos" />
        <Button Text="Clientes" Clicked="OpenClientes" />
        <Button Text="Ventas" Clicked="OpenVentas" />
        <Button Text="Stock" Clicked="OpenStock" />

    </VerticalStackLayout>
</ContentPage>
