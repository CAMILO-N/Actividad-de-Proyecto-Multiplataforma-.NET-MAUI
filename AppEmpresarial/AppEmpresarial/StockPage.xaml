<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppEmpresarial.StockPage"
             Title="Stock">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Entry x:Name="NombreEntry"
               Placeholder="Nombre del producto" />

        <Entry x:Name="CantidadEntry"
               Placeholder="Cantidad"
               Keyboard="Numeric" />

        <Button Text="Agregar al Stock"
                Clicked="AgregarStock" />

        <CollectionView x:Name="StockList">
            <CollectionView.ItemTemplate>
                <DataTemplate>

                    <SwipeView>

                        <SwipeView.RightItems>
                            <SwipeItems>
                                <SwipeItem Text="Eliminar"
                                           BackgroundColor="Red"
                                           Invoked="EliminarStock" />
                            </SwipeItems>
                        </SwipeView.RightItems>

                        <Grid Padding="10">
                            <VerticalStackLayout>
                                <Label Text="{Binding Nombre}" FontSize="18"/>
                                <Label Text="{Binding Cantidad}" FontSize="14" TextColor="Gray"/>
                            </VerticalStackLayout>
                        </Grid>

                    </SwipeView>

                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>

</ContentPage>
